@model IEnumerable<BT_NHOM.Models.KhachHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ContainerLayout.cshtml";
}
<div class="home-filter grid__row">
    @foreach (var item in Model)
    {
        <div class="card grid__column-3 p-0 " style="height:460px;width:270px;">
            <div class="bg-image hover-overlay ripple p-0 m-1" data-mdb-ripple-color="light">
                <a class="mask_hover" href="@Url.Action("ThanhToan","ThanhToan", new { id = item.MaKH })">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)">
                        <img width="100%" src="~/Assets/Multimedia/" class="img-fluid" style="height:260px;" />
                    </div>
                </a>
            </div>
            <div class="card-body" style="cursor: default">
                <h2 class="card-title">@Html.DisplayFor(modelItem => item.Ho) @Html.DisplayFor(modelItem => item.Holot) @Html.DisplayFor(modelItem => item.Ten)</h2>
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </p>

            </div>
            <div class="card-body" style="cursor: default">
                <p class="card-text">
                    SĐT: @Html.DisplayFor(modelItem => item.SoDTKH)
                </p>
            </div>

            <div style="display: flex; justify-content:space-between; align-items: flex-end">
                <a style=" width:20%" href="" class="price price_color">Chỉnh sửa</a>
                @*<p class="price_color" style=" text-align: center; width: 30%; border-radius: 4px; cursor: default">
                    @Html.DisplayFor(modelItem => item.giaBia)
                </p>*@
            </div>
        </div>
    }
</div>