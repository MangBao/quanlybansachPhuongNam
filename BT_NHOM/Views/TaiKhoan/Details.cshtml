@model BT_NHOM.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string gtinh = "";
}


<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:auto;margin-right:auto">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <b>THẺ NHÂN VIÊN</b>
                <tr>
                    <td rowspan="8"><img src="~/AssetsLayoutAdmin/img/@Html.DisplayFor(model => model.AnhNV)" width="100" height="100" /></td>
                    <td>Mã nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.MaNV)</td>
                </tr>
                <tr>
                    <td>Tên nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.HoNV) @Html.DisplayFor(model => model.TenNV)</td>
                </tr>
                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.GioiTinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
                <tr>
                    <td>Số điện thoại:</td>
                    <td>@Html.DisplayFor(model => model.SoDTNV)</td>
                </tr>

                <tr>
                    <td>Email:</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                
                <tr>
                    <td>Tên nhóm nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.NhomNhanVien.IDNhom)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<p style="text-align:center">
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaNV }) |
    <a href="@Url.Action("Index", "Home/Index", null)">Quay lại</a>
</p>
