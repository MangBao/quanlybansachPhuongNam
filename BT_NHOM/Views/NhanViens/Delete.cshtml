@model BT_NHOM.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string gtinh = "";
}

<div style="text-align:center">
    <h4 style="color:red;"> Bạn có chắc chắn xóa thông tin này?</h4>
    <table border="0" cellpadding="0" cellspacing="0" style="font-size:14px; margin-left:auto; margin-right:auto">
        <tr>
            <td>
                <table cellpadding="2" cellspacing="10">
                    <b>THÔNG TIN CHI TIẾT</b>
                    <tr>
                        <td rowspan="8"><img src="~/AssetsLayoutAdmin/img/@Html.DisplayFor(model => model.AnhNV)" width="100" height="100" /></td>
                        <td>Mã nhân viên:</td>
                        <td>@Html.DisplayFor(model => model.MaNV)</td>
                    </tr>
                    <tr>
                        <td>Tên nhân viên:</td>
                        <td>@Html.DisplayFor(model => model.HoNV) @Html.DisplayFor(model => model.TenNV)</td>
                    </tr>
                    
                    <tr>
                        <td>Giới tính:</td>
                        <td>
                            @{if (Model.GioiTinh == true)
                                { gtinh = "Nam"; }
                                else
                                { gtinh = "Nữ"; }
                            }
                            @gtinh
                        </td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Html.DisplayFor(model => model.DiaChi)</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Html.DisplayFor(model => model.SoDTNV)</td>
                    </tr>

                    <tr>
                        <td>Email:</td>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <td>Tên nhóm nhân viên:</td>
                        <td>@Html.DisplayFor(model => model.NhomNhanVien.IDNhom)</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:50px;">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "StaffSystem")
        </div>
    }

</div>