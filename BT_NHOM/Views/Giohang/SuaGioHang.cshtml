@using BT_NHOM.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Sua Gio Hang";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<div class="grid">
    <div class="grid__row app__content">
        <table class="tb_mobile">
            <tr>
                <th style="font-weight:bold">Mã Sách</th>

                <th style="font-weight:bold">Tên Sách</th>

                <th style="font-weight:bold">Ảnh Bìa</th>

                <th style="font-weight:bold">Đơn Giá</th>

                <th style="font-weight:bold">Số Lượng</th>


            </tr>


            @foreach (var item in Model)
            {
                <tr class="item" style="clear:both">
                    <td>@item.iMaSP</td>

                    <td>@item.iTenSP</td>

                    <td><img src="@Url.Content("~/Assets/Multimedia/"+item.iAnhBia)" style="width:50px;height:50px" alt="Image" class="img-fluid"> </td>

                    <td>@string.Format("{0:0,0}", item.iDonGia) vnd</td>
                    <style>
                        .btntext {
                            width: 60px;
                            text-align: center;
                        }
                    </style>
                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @Ma = item.iMaSP }))
                    {
                        @*<td>@Html.TextBox("txtSoLuong", @item.iSoLuong, new { style="width:50%", @max="25", @min="1"}) </td>*@
                        <td>
                            
                            @Html.TextBox("txtSoLuong", @item.iSoLuong, new { @class = "btntext val", type ="number", min="1"})
                        </td>
                        <td>
                            <div class="quitbag" style="display: flex; justify-content:center">
                                <button class="price price_color">Cập nhật</button>
                            </div>
                            
                        </td>
                        
                    }
                </tr>
                
                
            }

        </table>
        
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/Assets/JS/index.js"></script>
</div>

