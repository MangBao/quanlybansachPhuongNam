@model BT_NHOM.Models.NhomNhanVien

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>CẬP NHẬT THÔNG TIN QUYỀN</h3>

@using (Html.BeginForm("Edit", "NhomNhanViens", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <div class="form-group1">
            @Html.LabelFor(model => model.IDNhom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDNhom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDNhom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group1">
            @Html.LabelFor(model => model.TenNhom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNhom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group1">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default" style="background-color: #EEE8AA">Lưu</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
