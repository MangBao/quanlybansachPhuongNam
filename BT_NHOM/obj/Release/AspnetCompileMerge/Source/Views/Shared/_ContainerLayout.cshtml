@*@model PagedList.IPagedList<BT_NHOM.Models.Sach>*@
@using PagedList.Mvc;

@model  BT_NHOM.Models.ViewModels

@{
    ViewBag.Title = "_ContainerLayout";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    string type = "";
}

<div class="grid">
    <div class="grid__row app__content">
        <div class="grid__column-2">
            <nav class="category">
                <h3 class="category-heading">
                    <i class="category-heading-icon fas fa-list-ul"></i>Danh mục
                </h3>               

                @foreach (var item in Model.TheLoais)
                {
                    <ul class="category-list">                        
                        <li class="category-item ">
                            @{ type = item.MaTL.ToString(); }
                            @Html.ActionLink(item.TenTL, "IndexType",
                   new { sortOrderType = type, CurrentSort = ViewBag.SortType, },
                   new { @class = "category-item__link", @style = "text-decoration: none;" })
                        </li>
                    </ul>
                }

            </nav>
        </div>
        <div class="grid__column-10">            

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://genk.mediacdn.vn/2019/9/3/anh-2-15674958753361889915318.jpeg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://nhanlucnhatban.com/wp-content/uploads/2020/01/the-gioi-manga.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://hiepsibaotap.com/wp-content/uploads/2020/04/042819_Blog-Header_1200x630.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span style="font-size: 3.5rem;"><i class="fas fa-chevron-circle-left"></i></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span style="font-size: 3.5rem;"><i class="fas fa-chevron-circle-right"></i></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div id="sort" class="grid__column-12">
        <div class="home-filter">
            <span class="home-filter__label">Sắp xếp theo</span>
            <button class="home-filter__btn btn btn--primary">Phổ biến</button>
            @Html.ActionLink("Mới nhất", "Index",
                       new { sortOrder = "moinhat", CurrentSort = ViewBag.SortParm, },
                       new { @class = "home-filter__btn btn btn--primary", @style = "text-decoration: none;" })

            @Html.ActionLink("Bán chạy", "Index",
                       new { sortOrder = "hot", CurrentSort = ViewBag.SortParm, },
                       new { @class = "home-filter__btn btn btn--primary", @style = "text-decoration: none;" })

            <div class="select--input">
                <span class="select--input__label">Giá</span>
                <i class="select--input__icon fas fa-angle-down"></i>

                <!-- List options -->
                <ul class="select--input__list">
                    <li class="select--input__item">
                        @Html.ActionLink("Giá: Thấp đến Cao", "Index",
                       new { sortOrder = "priceAsc", CurrentSort = ViewBag.SortPrice, },
                       new { @class = "select--input__link", @style = "text-decoration: none;" })
                    </li>
                    <li class="select--input__item">
                        @Html.ActionLink("Giá: Cao đến Thấp", "Index",
                       new { sortOrder = "priceDes", CurrentSort = ViewBag.SortPrice, },
                       new { @class = "select--input__link", @style = "text-decoration: none;" })
                    </li>
                </ul>
            </div>
            <div class="home-filter__page">
                <span class="home-filter__page-num">
                    Trang @(Model.Saches.PageCount < Model.Saches.PageNumber ? 0 : Model.Saches.PageNumber) / @Model.Saches.PageCount
                </span>

                <div class="home-filter__page-control">
                    <a href="" class="home-filter__page-btn">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </div>
                <div class="home-filter__page-control">
                    <a href="" class="home-filter__page-btn">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
    <!-- Mobile -->
    <div id="catalog-icon" class="grid__column-12">
        <div class="home-filter">
            <ul class="catalog_list">
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 40px;" class="catloge_icon fas fa-bolt"></i>
                        <div style="font-size: 8px;" class="catloge_tilte">Sách giảm giá</div>
                    </a>
                </li>
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 40px;" class="catloge_icon fab fa-hotjar"></i>
                        <div style="font-size: 8px;" class="catloge_tilte">Sách bán chạy</div>
                    </a>
                </li>
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 40px;" class="catloge_icon fab fa-mandalorian"></i>
                        <div style="font-size: 8px;" class="catloge_tilte">Truyện tranh</div>
                    </a>
                </li>
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 38px;" class="catloge_icon fab fa-dev"></i>
                        <div style="font-size: 10px;" class="catloge_tilte">Sách lập trình</div>
                    </a>
                </li>
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 40px;" class="catloge_icon fas fa-atom"></i>
                        <div style="font-size: 8px;" class="catloge_tilte">Sách khoa học</div>
                    </a>
                </li>
                <li class="catalog_item">
                    <a href="" class="catloge_link">
                        <i style="font-size: 40px;" class="catloge_icon fas fa-file-audio"></i>
                        <div style="font-size: 8px;" class="catloge_tilte">Sách âm nhạc</div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- Book list -->
    <div id="cart" class="grid__column-12">
        @RenderBody()
    </div>


</div>
<div class="mt-4">
    <nav aria-label="Page navigation example mx-auto d-flex">

        <ul class="pagination justify-content-center">
            @*<li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>*@

            @Html.PagedListPager(Model.Saches, page => Url.Action("Index", new { page }))
        </ul>
    </nav>

</div>

