@model BT_NHOM.Models.TacGia

@{
    ViewBag.Title = "EditTG";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}
<div id="cart" class="grid__column-12">
    <div class="home-filter grid__row">
        @using (Html.BeginForm("EditTG", "Nhanviens", FormMethod.Post, new { @style = "margin-left: auto; margin-right: auto;", enctype = "multipart/form-data" }))
        {
