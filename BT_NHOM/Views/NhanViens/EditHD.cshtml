@model BT_NHOM.Models.HoaDon

@{
    ViewBag.Title = "EditHD";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="text-align:center; font-size: 3.5rem; margin-bottom: 36px">Xác nhận kiểm duyệt hóa đơn</h1>


@using (Html.BeginForm("EditHD", "Nhanviens", FormMethod.Post, new { @style = "margin-left: auto; margin-right: auto;" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 1.8rem;">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaHD)

    <div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.MaHD, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control", disable = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.TenKH, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control", disable = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.SoDT, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control", disable = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.DiaChiGiao, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.DiaChiGiao, new { htmlAttributes = new { @class = "form-control", disable = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.DiaChiGiao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.NgayXuatKho, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.NgayXuatKho, new { htmlAttributes = new { @class = "form-control", disable = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.NgayXuatKho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.NgayGiao, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-3">
                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                <div class="">
                    @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control", max = "3", min = "1", disable = "disabled" } })
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
                @ViewBag.ErrNum
                <span style="color:red">Tình trạng đơn: 1.Chưa kiểm, 2.Đã kiểm, 3.Đã giao</span>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.MaNV, "Nhân viên kiểm đơn", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="background-color: tomato; color: white" type="submit" value="Save" class="btn">
                <a style="margin-left: 16px;" href="@Url.Action("Delete",
                                new { id = Model.MaHD })" class="price price_color">Xóa</a>
            </div>
            <div style="font-size: 1.8rem;">
                @Html.ActionLink("Quay lại", "IndexHD")
            </div>
        </div>
    </div>
    </div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
