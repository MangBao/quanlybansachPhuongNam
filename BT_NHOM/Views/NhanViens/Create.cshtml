@model BT_NHOM.Models.NhanVien

@{
    ViewBag.Title = "Thêm Mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    input, checkbox, select {
        margin-bottom: 5px;
    }
</style>

<h3>THÊM MỚI NHÂN VIÊN</h3>
@using (Html.BeginForm("Create", "NhanViens", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" >
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.MaNV, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly", @Value = ViewBag.MaNV } })
            @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.HoNV, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.HoNV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.TenNV, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.GioiTinh, "Giới tính", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            <div class="checkbox">
                Nam @Html.RadioButtonFor(model => model.GioiTinh, "True", new { @checked = "checked" }) &nbsp;
                Nữ @Html.RadioButtonFor(model => model.GioiTinh, "False")
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.SoDTNV, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.SoDTNV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDTNV, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" style="align-items:center;">
        @Html.LabelFor(model => model.AnhNV, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            <input type="file" style="height:30px;" name="Avatar" accept="image" required />
            @Html.ValidationMessageFor(model => model.AnhNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.Matkhau, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="align-items:center">
        @Html.LabelFor(model => model.IDNhom, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownList("IDNhom", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDNhom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group1">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default" style="background-color: #EEE8AA">Thêm mới</button>

        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "StaffSystem")
</div>
