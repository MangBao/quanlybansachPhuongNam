                </div>
                <div style="font-size: 1.8rem;">
                    @Html.ActionLink("Back to List", "IndexTG")
                </div>
            </div>
        </div>
        }
    </div>
</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
